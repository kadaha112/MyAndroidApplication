<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="activities.ReviseProfileActivity"
    android:orientation="vertical">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_profile"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/baseline_person_24"
        app:civ_border_overlay="true"
        app:civ_border_width="1dp"
        app:civ_border_color="#706B6B"
        android:layout_margin="16dp"
        android:layout_gravity="center_horizontal"/>
    <Button
        android:id="@+id/btn_change_photo"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="사진 선택"
        android:textSize="8dp"
        android:textColor="@color/black"
        android:backgroundTint="#AEABAB"
        android:layout_gravity="center_horizontal"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:padding="8dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/tie_nickname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="변경하실 닉네임을 입력하세요"/>

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/tie_introduce"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="변경하실 비밀번호를 입력하세요"/>

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/tie_introduce2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="변경하실 비밀번호를 한번 더 입력하세요"/>



    </com.google.android.material.textfield.TextInputLayout>

</LinearLayout>