<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="activities.StartSignUpActivity"
    android:orientation="vertical"
    android:background="@color/white">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:navigationIcon="@drawable/baseline_arrow_back_24"/>

    <ImageView
        android:layout_width="230dp"
        android:layout_height="230dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/my_logo"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="간편하게 로그인해서 \n 다양한 서비스를 받아보세요"
        android:fontFamily="@font/font1"
        android:textColor="@color/black"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="100dp">

        <TextView
            android:id="@+id/browse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="계정 없이 둘러보기"
            android:textColor="#686666"
            android:background="?attr/selectableItemBackground"/>
        <TextView
            android:id="@+id/clickGoogle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Google 로그인하기"
            android:textSize="21sp"
            android:background="@drawable/bg_intro_login_google_frame"
            android:padding="8dp"
            android:fontFamily="@font/font1"
            android:drawableStart="@drawable/intro_login_google"
            android:drawablePadding="10dp"
            android:layout_margin="8dp"/>

        <TextView
            android:id="@+id/clickKakao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="카카오 로그인하기"
            android:textSize="21sp"
            android:background="#FCDB3F"
            android:padding="8dp"
            android:fontFamily="@font/font1"
            android:drawableStart="@drawable/intro_login_kakao"
            android:drawablePadding="10dp"
            android:layout_margin="8dp"/>

        <TextView
            android:id="@+id/clickNaver"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="네이버 로그인하기"
            android:textSize="21sp"
            android:background="#03C65A"
            android:padding="8dp"
            android:fontFamily="@font/font1"
            android:drawableStart="@drawable/intro_login_naver"
            android:drawablePadding="10dp"
            android:layout_margin="8dp"/>


        <TextView
            android:id="@+id/sign_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="간편회원가입"
            android:textColor="#040404"
            android:textSize="16dp"
            android:layout_marginTop="50dp"
            android:textStyle="bold"
            android:background="?attr/selectableItemBackground"/>
    </LinearLayout>



</LinearLayout>